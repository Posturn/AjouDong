<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    app:layout_gravity="center"
    android:background="@drawable/popup_radius">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_centerInParent="true"
        android:background="@color/ajouLogoSky"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/confirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말로 해당 회원을\n삭제하시겠습니까?"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="24dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/deleteConfirmButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="예"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@color/ajouLogoBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmText"/>
    <Button
        android:id="@+id/deleteCancelButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="아니오"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmText"/>
</androidx.constraintlayout.widget.ConstraintLayout>