                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/nurse" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
