<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qnachild"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/qna_round"
    android:elevation="10dp">

    <ImageView
        android:id="@+id/childimageView"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:background="@drawable/image_rounding"
        app:srcCompat="@drawable/ic_default_round"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="13dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/childtextView21"
        android:layout_width="87dp"
        android:layout_height="21dp"
        android:text="사용자 이름"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="23dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/childtextView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020.06.21 13:20"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="23dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/childeditText"
        style="@style/QnATextBox"
        android:layout_width="372dp"
        android:layout_height="75dp"
        android:text="작성된 질문입니다."
        android:maxLength="1000"
        android:textSize="13dp"
        tools:layout_editor_absoluteY="50dp"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/childeditText6"
        style="@style/QnATextBox"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:hint="댓글을 입력해주세요.댓글을 입력해주세요.댓글을 입"
        android:paddingStart="60dp"
        android:paddingEnd="40dp"
        android:background="@drawable/comment_button"
        android:maxLength="1000"
        android:textSize="13dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="324dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childeditText"
        app:layout_constraintVertical_bias="0.255" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CommentRecylerView"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="11dp" />

    <CheckBox
        android:id="@+id/checkBoxQnaChild"
        android:layout_width="52dp"
        android:layout_height="24dp"
        android:text="익명"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="328dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/childcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/edit"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="323dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>