<resources>

    <!-- 상단바 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/NaNumButtonStyle</item>
        <item name="android:editTextStyle">@style/NaNumEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/NaNumRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/NaNumCheckboxStyle</item>
        <item name="android:textViewStyle">@style/NaNumTextViewStyle</item>
    </style>

    <style name="LightToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/ajouLogoSky</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="BlueToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/ajouLogoBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="DarkToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/ajouLogoBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="AccentToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/ajouLogoOrange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="TransparentToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 폰트 -->
    <style name="NaNumTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>
    <style name="NaNumButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>
    <style name="NaNumEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>
    <style name="NaNumRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>
    <style name="NaNumCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>

    <!-- TextView -->
    <style name="CustomFilterButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/darkgary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FilterTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <style name="ListCategory" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/grid_category_click</item>
    </style>

    <style name="ApplyTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ApplyContent" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="AjoudongContent" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkgary</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="EditTextCustom" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/textbox</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">1000</item>
        <item name="android:padding">10dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AjoudongSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textColor">@color/darkgary</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <style name = "tabTextSize">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextBox" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@drawable/textbox</item>
        <item name="android:fontFamily">@font/nanumbarungothic</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">8dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="QnATextBox" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@drawable/qnatextbox</item>
        <item name="android:fontFamily">@font/nanumbarungothic</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">8dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
